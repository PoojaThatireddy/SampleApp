<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appit.AnimationsAndBottomSheet">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LayoutSlideAnimations" />
        <activity android:name=".BottomSheetActivity" />
        <activity android:name=".SlideLayout" />
        <activity android:name=".ActivityMic" />
        <activity android:name=".ActivtyChat" />
        <activity android:name=".SampleVoiceRecorder" />
        <activity android:name=".GroupInfo"></activity>
    </application>

</manifest>